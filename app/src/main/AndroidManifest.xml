<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="theoaktroop.finddoctor" >

    <uses-permission android:name="android.permission.CALL_PHONE"></uses-permission>
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".SplashScreen.SplashActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Doctor.DoctorListActivity"
            android:label="@string/title_activity_doctor_list" >
        </activity>
        <activity
            android:name=".Home.HomeActivity"
            android:label="@string/title_activity_home" >
        </activity>
        <activity
            android:name=".Clinic.ClinicListActivity"
            android:label="@string/title_activity_clinic_list" >
        </activity>
        <activity
            android:name=".Ambulance.AmbulanceListActivity"
            android:label="@string/title_activity_ambulance_list" >
        </activity>
        <activity
            android:name=".Diagnostic_Center.DiagnosticCenterListActivity"
            android:label="@string/title_activity_diagnostic_center_list" >
        </activity>
        <activity
            android:name=".Doctor.DoctorDetailsActivity"
            android:label="@string/title_activity_doctor_details" >
        </activity>
        <activity
            android:name=".Ambulance.AmbulanceDetailsActivity"
            android:label="Ambulance Information" >
        </activity>
    </application>

</manifest>
